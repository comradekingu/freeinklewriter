<!-- Initial chunk -->
<div class="chunk">
    
    <h1><%= @title %></h1>
    <h2><%= @author %></h2>
    
    <% if @first_stitches_content.present? %>
        <div class="stitch_block">
            <div class='stitch openingStitch'>
                <%= @first_stitches_content.first %> 
            </div>
            
            <% @first_stitches_content = @first_stitches_content.drop(1) %>
            
            <% if @first_stitches_content.present? %>
                <% @first_stitches_content.each do |value| %>
                    <div class='stitch'>
                        <%= value %> 
                    </div>
                <% end %>
            <% end %>
        </div>
    <% end %>

    <!-- Initial options -->
    <% if @first_options_content.present? %>    
        <div class="stitchBlock">
            <% @first_options_content.each do |value| %>  
                <div class='option_button'><%= value %></div>   
            <% end %>
        </div>
    <% end %>
    
